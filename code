    <script>
        // Create floating particles for background effect
        document.addEventListener('DOMContentLoaded', function() {
            const particlesContainer = document.getElementById('particles');
            const icons = ['fas fa-shield-alt', 'fas fa-lock', 'fas fa-key', 'fas fa-user-secret', 
                          'fas fa-network-wired', 'fas fa-incognito', 'fas fa-code', 'fas fa-database',
                          'fas fa-fingerprint', 'fas fa-eye', 'fas fa-eye-slash', 'fas fa-server'];
            
            for (let i = 0; i < 25; i++) {
                const icon = document.createElement('i');
                icon.className = icons[Math.floor(Math.random() * icons.length)] + ' floating-icon';
                
                icon.style.left = Math.random() * 100 + '%';
                icon.style.top = Math.random() * 100 + '%';
                icon.style.fontSize = (Math.random() * 1.5 + 1) + 'rem';
                icon.style.animationDelay = Math.random() * 5 + 's';
                icon.style.opacity = Math.random() * 0.5 + 0.3;
                
                particlesContainer.appendChild(icon);
            }
            
            // Add subtle hover effect to cards
            const cards = document.querySelectorAll('.card');
            cards.forEach(card => {
                card.addEventListener('mouseenter', () => {
                    card.style.boxShadow = '0 15px 35px rgba(102, 252, 241, 0.2)';
                });
                
                card.addEventListener('mouseleave', () => {
                    card.style.boxShadow = '0 10px 30px rgba(0, 0, 0, 0.3)';
                });
            });
            
            // Typing animation for subtitle
            const subtitleText = "Operational Security - Protecting your digital footprint in the modern world";
            const subtitleElement = document.getElementById('typing-subtitle');
            let charIndex = 0;
            
            function typeSubtitle() {
                if (charIndex < subtitleText.length) {
                    subtitleElement.innerHTML += subtitleText.charAt(charIndex);
                    charIndex++;
                    setTimeout(typeSubtitle, 50);
                } else {
                    subtitleElement.innerHTML += '<span class="typed-cursor">|</span>';
                }
            }
            
            typeSubtitle();
            
            // Matrix rain effect
            const matrixCanvas = document.getElementById('matrixRain');
            const ctx = matrixCanvas.getContext('2d');
            
            matrixCanvas.width = window.innerWidth;
            matrixCanvas.height = window.innerHeight;
            
            const letters = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789$#@%&!?';
            const fontSize = 14;
            const columns = matrixCanvas.width / fontSize;
            
            const drops = [];
            for(let i = 0; i < columns; i++) {
                drops[i] = 1;
            }
            
            function drawMatrix() {
                ctx.fillStyle = 'rgba(10, 17, 40, 0.05)';
                ctx.fillRect(0, 0, matrixCanvas.width, matrixCanvas.height);
                
                ctx.fillStyle = '#0ff';
                ctx.font = `${fontSize}px monospace`;
                
                for(let i = 0; i < drops.length; i++) {
                    const text = letters[Math.floor(Math.random() * letters.length)];
                    ctx.fillText(text, i * fontSize, drops[i] * fontSize);
                    
                    if(drops[i] * fontSize > matrixCanvas.height && Math.random() > 0.975) {
                        drops[i] = 0;
                    }
                    
                    drops[i]++;
                }
            }
            
            setInterval(drawMatrix, 33);
            
            // Show threats button functionality
            document.getElementById('showThreatsBtn').addEventListener('click', function() {
                this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Simulating...';
                
                setTimeout(() => {
                    this.innerHTML = 'Data Breach Detected!';
                    this.style.background = 'var(--accent2)';
                    this.style.boxShadow = '0 0 20px var(--accent2)';
                    
                    const threatSimulation = document.createElement('div');
                    threatSimulation.className = 'hacker-text';
                    threatSimulation.innerHTML = '<p>> WARNING: PERSONAL DATA LEAK DETECTED</p><p>> 537 DATA POINTS EXPOSED</p><p>> INITIATE COUNTERMEASURES</p>';
                    
                    this.parentNode.appendChild(threatSimulation);
                    
                    setTimeout(() => {
                        this.innerHTML = 'Simulate Data Leak';
                        this.style.background = 'transparent';
                        this.style.boxShadow = '0 0 10px rgba(102, 252, 241, 0.3)';
                        this.parentNode.removeChild(threatSimulation);
                    }, 5000);
                }, 2000);
            });
            
            // Start journey button functionality
            document.getElementById('startJourneyBtn').addEventListener('click', function() {
                this.innerHTML = '<i class="fas fa-cog fa-spin"></i> Initializing...';
                
                const steps = document.querySelectorAll('.step-list li');
                let delay = 0;
                
                steps.forEach(step => {
                    setTimeout(() => {
                        step.style.color = 'var(--accent)';
                        step.style.textShadow = '0 0 10px var(--accent)';
                    }, delay);
                    delay += 300;
                });
                
                setTimeout(() => {
                    this.innerHTML = '<i class="fas fa-check"></i> Journey Started!';
                    this.style.background = 'var(--accent)';
                    this.style.color = 'var(--primary)';
                }, delay);
            });
            
            // Make terminal text scroll
            const terminalContent = document.querySelector('.terminal-content');
            setInterval(() => {
                terminalContent.scrollTop = terminalContent.scrollHeight;
            }, 100);
            
            // Adjust canvas on resize
            window.addEventListener('resize', function() {
                matrixCanvas.width = window.innerWidth;
                matrixCanvas.height = window.innerHeight;
            });
        });
    </script>
</body>
</html>
